{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist/js",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": false,
    "typeRoots": ["./types"]
  },
  "include": ["src/**/*", "src/.d.ts"],
  "exclude": ["src/types/*.ts", "node_modules", ".vscode"]
}
